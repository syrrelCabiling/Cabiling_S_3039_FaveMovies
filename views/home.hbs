<section id="section3" class="panel">
  {{!--   <h1 class="user-panel-heading">
        Click to know more! 
    </h1>--}}


    <h4 class="mt-3">Click on a movie below to learn more about it. Maybe you'll like them too!</h4>

    <div class="movieCont col-lg-12 col-sm-12">
        <!-- loop through the movies list and put the info on the page -->
       
        <!-- this is exactly like a forEach loop with plain JS -->
        {{#each movies}}

            <div class="user-panel">
                <img class="poster" src="images/{{ Poster }}" alt="Movie Poster">
                <a class="u-link" href="{{ ID }}">
                    See More Info
                </a>
                <h4>{{ Title }}</h4>
            </div>
        {{/each}}
        
    </div>


    <!-- this will be filled in on the client side when we render our AJAX data -->
    <div class="lightbox container col-sm-12 col-lg-12">
        <div class="row">
        <span class="close">Exit</span>
        <div class="sidebar">
            <img src="" alt="Poster">
        </div>

        <div class="lb-content container-fluid col-sm-12 col-lg-12">

            <div class= "casts">
            {{ Casts }}
           
        </div>
        </div>
        </div>
    </div>
</section>