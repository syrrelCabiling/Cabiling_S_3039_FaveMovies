<section id="section3" class="panel">
  {{!--   <h1 class="user-panel-heading">
        Click to know more! 
    </h1>--}}

    <p>
        These movies are good.
    </p>

    <h4>Click on a movie below to learn more about it. Maybe you'll like them too!</h4>

    <div class="movieCont">
        <!-- loop through the movies list and put the info on the page -->
       
        <!-- this is exactly like a forEach loop with plain JS -->
        {{#each movies}}

            <div class="user-panel">
                <img class="poster" src="images/{{ Poster }}" alt="Movie Poster">
                <a class="u-link" href="{{ ID }}">
                    See More Info
                </a>
                <h1>{{ Title }}</h1>
            </div>

        {{/each}}
        
    </div>
    </div>

    <!-- this will be filled in on the client side when we render our AJAX data -->
    <section class="lightbox">
        <span class="close">x</span>
        <div class="sidebar">
            <img src="" alt="Poster">
        </div>

        <div class="lb-content">

        </div>
    </section>
</section>